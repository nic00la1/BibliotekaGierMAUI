<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BibliotekaGierMAUI.MVVM.Views.CategoryPage"
             Title="CategoryPage">

    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding Games}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Vertical" Padding="10">
                        <Image Source="{Binding Image}" HeightRequest="100" Aspect="AspectFill" />
                        <Label Text="{Binding Name}" FontAttributes="Bold" />
                        <Label Text="{Binding Description}" />
                        <Label Text="{Binding ReleaseDate}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <Frame BackgroundColor="#FF7F7F" MaximumWidthRequest="400" Padding="16, 8"
                       Margin="20">
                    <Label Text="Nie ma Å¼adnej gry w tej kategorii!" 
                           FontFamily="PoppinsSemibold"
                           FontSize="18"/>
                </Frame>
            </CollectionView.EmptyView>
        </CollectionView>
    </VerticalStackLayout>
    
</ContentPage>