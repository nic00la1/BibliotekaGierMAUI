<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BibliotekaGierMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BibliotekaGierMAUI"
    xmlns:views="clr-namespace:BibliotekaGierMAUI.MVVM.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab x:Name="HomeTab">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="home" />
        </Tab>
        <Tab x:Name="SectionsTab">
            <ShellContent ContentTemplate="{DataTemplate views:SectionsPage}" Route="sections" />
        </Tab>
        
    </TabBar>

</Shell>
